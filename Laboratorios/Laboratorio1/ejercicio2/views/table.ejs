<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/styles.css">
    <title>Tabla de Operaciones</title>
</head>
<body>
    <h2>Tabla de Resultados</h2>
    <table border="1">
        <tr>
            <th>Número</th>
            <th>Operación</th>
            <th>Valor</th>
            <th>=</th>
            <th>Resultado</th>
        </tr>
        <% results.forEach(row => { %>
            <tr>
                <td><%= row.num %></td>
                <td><%= row.operation === 'sum' ? '+' : row.operation === 'subtract' ? '-' : row.operation === 'multiply' ? '×' : '÷' %></td>
                <td><%= row.i %></td>
                <td>=</td>
                <td><%= row.result %></td>
            </tr>
        <% }); %>
    </table>
    <br>
    <a href="/">Volver</a>
</body>
</html>
